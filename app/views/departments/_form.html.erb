<div class="module-body">
    <%= form_with model: @department, data: {turbo: false} do |form| %>
        <div class="control-group">
            <%= form.label :name, class: "control-label" %>
            <div class="controls">
                <%= form.text_field :name %>
            </div>
        </div>
        <div class="control-group">
            <%= form.label :department_code, class: "control-label" %>
            <div class="controls">
                <%= form.text_field :department_code %>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <%= form.submit class: "button"%>
            </div>
        </div>
    <% end %>
</div>
