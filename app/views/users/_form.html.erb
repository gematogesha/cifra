<%= form_with model: @user, data: {turbo: false} do |form| %>
    <div class="RRow">
        <div class="RCol custom cols-widest-6 cols-wide-6 cols-middle-6 cols-narrow-6">
            <%= render "components/input", form: form, controller: @user, form_attr: :name, attr: "name", form_type: "text", type: "default", size: "eluno", beforeicon: nil, aftericon: nil, maxlength: nil, rounded: false, readonly: false %>
        </div>
        <div class="RCol custom cols-widest-6 cols-wide-6 cols-middle-6 cols-narrow-6">
            <%= render "components/input", form: form, controller: @user, form_attr: :password, attr: "password", form_type: "password",  type: "default", size: "eluno", beforeicon: nil, aftericon: nil, maxlength: 8, rounded: false, readonly: false %>
        </div>
        <div class="RCol custom cols-widest-6 cols-wide-6 cols-middle-6 cols-narrow-6">
            <%= render "components/input", form: form, controller: @user, form_attr: :email, attr: "email", form_type: "email", type: "default", size: "eluno", beforeicon: nil, aftericon: nil, maxlength: nil, rounded: false, readonly: false %>
        </div>
        <div class="RCol custom cols-widest-6 cols-wide-6 cols-middle-6 cols-narrow-6">
            <%= render "components/input", form: form, controller: @user, form_attr: :post, attr: "post", form_type: "text", type: "default", size: "eluno", beforeicon: nil, aftericon: nil, maxlength: nil, rounded: false, readonly: false %>
        </div>

        <div class="control-group">
            <%= form.label :department_id, class: "control-label" %>
            <div class="controls">
                <%= form.select :department_id, Department.order(:title).map{|department|[department.title, department.id]} %>
            </div>
        </div>

        <div class="RCol">
            <%= render "components/checkbox", form: form, controller: @user, form_attr: :admin, attr: "admin" %>
        </div>

        <div class="control-group">
            <%= form.label :admin, class: "control-label" %>
            <div class="controls">
                <%= form.check_box :admin %>
            </div>
        </div>


        <div class="RCol">
            <%= render "components/button", type: "primary", size: "helike", width: "content", color: "rocky", icon: nil, title: I18n.t("action.save") %>
        </div>


    </div>

<% end %>
