<div class="module-body">
    <%= form_with model: @user, data: {turbo: false} do |form| %>
        <div class="control-group">
            <%= form.label :name, class: "control-label" %>
            <div class="controls">
                <%= form.text_field :name %>
            </div>
        </div>

        <%= render "components/input", form: form, controller: @user, form_attr: :password, form_type: "password", attr: "password", type: "default", size: "eluno", beforeicon: nil, aftericon: nil, maxlength: 15, rounded: false, readonly: false %>

        <%= render "components/textarea", form: form, controller: @user, form_attr: :name, attr: "name", maxlength: 15, rows: 3, readonly: false %>

        <div class="control-group">
            <%= form.label :password, class: "control-label" %>
            <div class="controls">
                <%= form.password_field :password %>
            </div>
        </div>

        <%= render "alert", attr: "password" %>

        <div class="control-group">
            <%= form.label :email, class: "control-label" %>
            <div class="controls">
                <%= form.email_field :email %>
            </div>
        </div>
        <div class="control-group">
            <%= form.label :post, class: "control-label" %>
            <div class="controls">
                <%= form.text_field :post %>
            </div>
        </div>
        <div class="control-group">
            <%= form.label :department_id, class: "control-label" %>
            <div class="controls">
                <%= form.select :department_id, Department.order(:title).map{|department|[department.title, department.id]} %>
            </div>
        </div>
        <div class="control-group">
            <%= form.label :admin, class: "control-label" %>
            <div class="controls">
                <%= form.check_box :admin %>
            </div>
        </div>


    <%= render "components/button", type: "primary", size: "helike", width: "content", color: "rocky", icon: nil, title: "form.submit" %>

        <div class="control-group">
            <div class="controls">
                <%= form.submit class: "button"%>
            </div>
        </div>
    <% end %>
</div>
