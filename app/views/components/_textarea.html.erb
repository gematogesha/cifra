<% @error_status = nil %>

<% if controller.errors.any? %>
    <% @error_status = "error" %>
<% end %>

<section class="RTextarea <%= @error_status %> <%= " readonly" if readonly %>">
    <%= form.text_area form_attr, rows: rows, class: "RTextarea__textarea", maxlength: maxlength if !maxlength.nil? %>
    <%= form.label form_attr, class: "RTextarea__label" %>

    <% if controller.errors.any? %>
        <% controller.errors.each do |error| %>
            <% if error.attribute.to_s == attr %>
                <span class="RTextarea__error"><%= error.full_message %></span>
            <% end %>
        <% end %>
    <% end %>


</section>
